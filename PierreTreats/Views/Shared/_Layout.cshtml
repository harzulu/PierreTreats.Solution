<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Pierres Treats!</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Courier+Prime&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/styles.css">
  </head>
  <body>
    <nav class="navbar">
      <div class="container-fluid">
        <ul class="nav navbar-nav">
          <button type="button" class="btn btn-dark">
            <span class="glyphicon glyphicon-home" aria-hidden="true"></span><li>@Html.ActionLink("Home", "Index", "Home")</li>
          </button>

          <button type="button" class="btn btn-dark">
            <span class="glyphicon glyphicon-user" aria-hidden="true"></span><li>@Html.ActionLink("Login", "Index", "Account")</li>
          </button>
          
          <button type="button" class="btn btn-dark">
            <span class="glyphicon glyphicon-cutlery" aria-hidden="true"></span><li>@Html.ActionLink("See all Treats", "Index", "Treats")</li>
          </button>
          
          <button type="button" class="btn btn-dark">
            <span class="glyphicon glyphicon-star" aria-hidden="true"></span><li>@Html.ActionLink("See all Flavors", "Index", "Flavors")</li>
          </button>
        </ul>
      </div>
    </nav>
    <div id="info">
      @RenderBody()
    </div>
  </body>
</html>