@{
  Layout = "_Layout";
}

@using PierreTreats.Models;
@model List<PierreTreats.Models.Flavor>;

<h1>Flavor List</h1>

@if (@Model.Count == 0)
{
    <h3>No Flavors currently listed.</h3>
}

@foreach (Flavor flavor in Model)
{
  <li>@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId })</li>
}


<nav class="navbar navbar-light">  
  <div class="container-fluid" id="nav-background">  
    <ul class="nav navbar-nav">
      <button type="button" class="btn btn-dark">
        <span class="glyphicon glyphicon-star" aria-hidden="true"></span><li>@Html.ActionLink("Add new Flavor", "Create")</li>  
      </button>
    </ul>
  </div>
</nav>